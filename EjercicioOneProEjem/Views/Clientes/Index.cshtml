<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayName("Nombre")

            <!--
            @Html.DisplayNameFor(model => model.nombre)
                -->
        </th>
        <th>
            @Html.DisplayName("Apellido Paterno")
            <!--
            @Html.DisplayNameFor(model => model.apPaterno)
                -->
        </th>
        <th>
            @Html.DisplayName("Apellido Materno")
            <!--
            @Html.DisplayNameFor(model => model.apMaterno)
                -->
        </th>
        <th>
            @Html.DisplayName("Genero")
            <!--
                
         
            @Html.DisplayNameFor(model => model.genero)
                -->
        </th>
        <th>
            @Html.DisplayName("Fecha Nacimiento")
            <!--
            @Html.DisplayNameFor(model => model.fechaNac)
                -->
        </th>
        <th>
            @Html.DisplayName("Email")
            <!--
            @Html.DisplayNameFor(model => model.email)
                -->
        </th>
        <th>
            @Html.DisplayName("Saldo")
            <!--
            @Html.DisplayNameFor(model => model.saldo)
                -->
        </th>
        <th>
            @Html.DisplayName("Limite de Credito")
            <!--
            @Html.DisplayNameFor(model => model.limiteCre)
                -->
        </th>
        <th>
            @Html.DisplayName("Descuento")
            <!--
            @Html.DisplayNameFor(model => model.descuento)
                -->
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr id="@item.idCliente">
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apPaterno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apMaterno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.genero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaNac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.saldo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.limiteCre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descuento)
        </td>
        <td style="display:inline-block">
             @Html.ActionLink("Edit", "Edit", new { id = item.idCliente }, new { @class = "btn btn-primary btn-xs" }) |
            <button class="btn-delete btn btn-danger btn-xs" id="@item.idCliente" data-target="#myModal" data-toggle="modal">Eliminar</button>
           
        </td>
    </tr>
}

</table>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header alert alert-danger">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Eliminar</h4>
            </div>
            <div class="modal-body">
                <p class="success-message">Desea eliminar este Cliente ? </p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success delete-confirm">Ok</button>
                <button class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            var id;
            $('.btn-delete').click(function () {
                id = $(this).attr('id');
            });

          $('.delete-confirm').click(function () {
            $.ajax({
                url: '/Clientes/DeleteConfirmed',
                data: {'id': id},
                type: 'GET',
                success: function (data) {
                    if (data) {
                        if ($('.modal-header').hasClass('alert-danger')) {
                            $('.modal-header').removeClass('alert-danger').addClass('alert-success');
                            $('.delete-confirm').css('display', 'none');
                        }
                        $('.success-message').html("Borrado con exito");
                        $('#' + id).css('display', 'none');
                    }
                }, error: function (err) {
                    $('.modal-title').html('Error al eliminar');
                     $('.modal-header').removeClass('alert-success').addClass('alert-danger');
                    $('.delete-confirm').css('display', 'none');
                    $('.success-message').html("Error al borrar cliente intente nuevamente");
                }
            });
        });
          $("#myModal").on("hidden.bs.modal", function () {
              $('.modal-title').html('Eliminar');
            $(".modal-header").removeClass(' ').addClass('alert-danger');
            $('.delete-confirm').css('display', 'inline-block');
            $('.success-message').html('').html('Desea eliminar este cliente ? ');
        });
    });
</script>
}